rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read, create, update, or delete documents in the 'games' collection.
    // This rule is open for this public game, but for apps with user data,
    // you would use 'request.auth.uid' to restrict access.
    match /games/{gameId} {
      allow read, write: if true;
    }
  }
}
